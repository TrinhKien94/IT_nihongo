<div class="container">
  <div class="page-header">
    <section class="col-sm-4 col-sm-offset-4">
      <div id="image_size">
        <%= image_tag @user.avatar %>
      </div>
    </section>    
    <section class="user_info col-sm-4">
      <h1>email: <%= @user.email %></h1>
      <h1>name: <%= @user.user_name %></h1>
      <h1>age: <%= @user.age %></h1>
      <h1>phone: <%= @user.phone_number %></h1>
    </section>
  </div>
</div>  
