<table width="100%">
  <tr>
    <th width="70%"><%= :name %></th>
    <th width="30%"><%= t :action %></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <th><%= link_to user.user_name, admin_user_path(user) %></th>
      <th>
        <%= link_to t("edit"), edit_admin_user_path(user), 
          class: "btn btn-primary" %>
        <% unless current_user == user %>
          <%= link_to t("delete"), admin_user_path(user),
            method: :delete, data: {confirm: t("flash.confirm")}, 
            class: "btn btn-danger" %>
        <% end %>
      </th>
    </tr>
  <% end %>
</table>
